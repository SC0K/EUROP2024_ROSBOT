<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Define arguments for robot name and initial pose -->
  <arg name="robot_name" />
  <arg name="init_pose" />

  <!-- Spawn the robot model in Gazebo -->
  <node name="rosbot_spawn" pkg="gazebo_ros" type="spawn_model" args="$(arg init_pose) -urdf -param /$(arg robot_name)/robot_description -model $(arg robot_name)" respawn="false" output="screen"/>
  
  <!-- Publish the robot state -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
    <param name="/$(arg robot_name)/robot_description" command="$(find xacro)/xacro '$(find rosbot_description)/urdf/rosbot.xacro' robot_namespace:=$(arg robot_name)"/>
    <remap from="tf" to="/$(arg robot_name)/tf"/>
    <remap from="tf_static" to="/$(arg robot_name)/tf_static"/>
  </node>
  
</launch>
