<?xml version="1.0"?>
 <!-- Localization -->
 
<launch>
  <master auto="start"/>
  <arg name="initial_pose_x"  default="5.0"/>
  <arg name="initial_pose_y"  default="0.0"/>
  <arg name="initial_pose_z"  default="0.0"/>
  <arg name="initial_pose_a"  default="0.0"/>

  <node pkg="amcl" type="amcl" name="robot3_amcl" output="screen">
    <remap from="scan" to="/robot3/scan"/>
    <param name="odom_frame_id" value="robot3_tf/robot3_tf/odom"/>
    <param name="odom_model_type" value="diff"/>
    <param name="base_frame_id" value="/robot3_tf/base_link"/>
    <param name="update_min_d" value="0.1"/>
    <param name="update_min_a" value="0.2"/>
    <param name="min_particles" value="500"/>
    <!-- <param name="global_frame_id" value="map"/> -->
    <param name="initial_pose_x"            value="$(arg initial_pose_x)"/>
    <param name="initial_pose_y"            value="$(arg initial_pose_y)"/>
    <param name="initial_pose_z"            value="$(arg initial_pose_z)"/>
    <param name="initial_pose_a"            value="$(arg initial_pose_a)"/>
    <remap from="amcl_pose"                 to="/robot3/amcl_pose"/>
    <remap from="particlecloud"             to="/robot3/particlecloud"/>
    <remap from="initialpose"               to="/robot3/initialpose"/>
    
  </node>

</launch>